<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.curriculum.CurriculumFragment"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:id="@+id/scroll_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/section_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginBottom="2dp"
                    android:text="   All Courses"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/course_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_title"
                    android:layout_alignStart="@id/section_title"
                    android:layout_marginLeft="30dp"
                    android:text="Course Info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/section_title"
                    android:layout_marginLeft="210dp"
                    android:layout_toRightOf="@id/course_info"
                    android:text="Term" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/light_gray"
                    android:layout_below="@id/course_info"
                    android:layout_alignStart="@id/section_title"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/current_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/section_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:text="    Past Enrollments"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/course_info_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_title_2"
                    android:layout_alignStart="@id/section_title_2"
                    android:layout_marginLeft="30dp"
                    android:text="Course Info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/section_title_2"
                    android:layout_marginLeft="210dp"
                    android:layout_toRightOf="@id/course_info_2"
                    android:text="Term" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/course_info_2"
                    android:layout_alignStart="@id/section_title_2"
                    android:background="@color/light_gray" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/past_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>