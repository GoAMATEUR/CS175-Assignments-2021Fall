<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.curriculum.CurriculumFragment"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="All courses"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/course_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_title"
                android:layout_alignStart="@id/section_title"
                android:text="Course Info" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/section_title"
                android:layout_toRightOf="@id/course_info"
                android:layout_marginLeft = "250dp"
                android:text="term"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/light_gray"
                android:layout_below="@id/course_info"
                android:layout_alignStart="@id/course_info"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>